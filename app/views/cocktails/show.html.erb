<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> - <%= link_to "🗑️", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to 'Ajouter une dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
<%= link_to 'Go back to index', root_path, class: 'btn btn-warning' %>


